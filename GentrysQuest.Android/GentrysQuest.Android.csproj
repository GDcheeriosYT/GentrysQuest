    <PackageReference Include="Microsoft.Maui.Essentials" Version="8.0.70" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\GentrysQuest.Game\GentrysQuest.Game.csproj" />
  </ItemGroup>
  <PropertyGroup>
    <AndroidSdkDirectory>C:\Users\GDcheerios\AppData\Local\Android\sdk</AndroidSdkDirectory>
  </PropertyGroup>
</Project>
